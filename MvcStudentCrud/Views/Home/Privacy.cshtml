@{
    ViewData["Title"] = "Privacy Policy";
}

<section id="practices">
    <div class="practices-container">

        <h2 class="section-title">Privacy & Data Protection</h2>
        <p class="section-subtitle">How we collect, store, secure, and use student information responsibly</p>

        <div class="practice-layout">

            <!-- Left Timeline: Data Protection Stages -->
            <div class="timeline-track">
                <div class="timeline-progress"></div>

                <div class="timeline-points">

                    <div class="timeline-point active">
                        <div class="futuristic-label">
                            <span class="label-text">Data Collection</span>
                        </div>
                        <div class="timeline-indicator"></div>
                    </div>

                    <div class="timeline-point">
                        <div class="futuristic-label">
                            <span class="label-text">Data Storage</span>
                        </div>
                        <div class="timeline-indicator"></div>
                    </div>

                    <div class="timeline-point">
                        <div class="futuristic-label">
                            <span class="label-text">Data Security</span>
                        </div>
                        <div class="timeline-indicator"></div>
                    </div>

                    <div class="timeline-point">
                        <div class="futuristic-label">
                            <span class="label-text">User Rights</span>
                        </div>
                        <div class="timeline-indicator"></div>
                    </div>

                </div>
            </div>

            <!-- Right Content Area: Privacy Features -->
            <div class="practice-content-area">

                <!-- Data Collection -->
                <div class="practice-card-new">
                    <div class="practice-header">
                        <div class="practice-icon-new">📥</div>
                        <div class="practice-info">
                            <h3>Student Data Collection</h3>
                            <span class="practice-duration">Only essential information</span>
                        </div>
                    </div>

                    <p class="practice-description">
                        We collect and store only the information required for academic management and
                        student identification. This includes name, age, contact details, academic records, and
                        related educational information. No unnecessary or sensitive personal data is collected.
                    </p>

                    <div class="practice-benefits">
                        <a href="#" class="benefit-tag">Minimal Data</a>
                        <a href="#" class="benefit-tag">Transparency</a>
                        <a href="#" class="benefit-tag">Purpose-Limited</a>
                    </div>
                </div>

                <!-- Data Storage -->
                <div class="practice-card-new">
                    <div class="practice-header">
                        <div class="practice-icon-new">💾</div>
                        <div class="practice-info">
                            <h3>Secure Data Storage</h3>
                            <span class="practice-duration">Encrypted & protected</span>
                        </div>
                    </div>

                    <p class="practice-description">
                        Student data is stored in a secure database with controlled access. We ensure compliance
                        with data retention policies and prevent unauthorized changes or retrievals.
                    </p>

                    <div class="practice-benefits">
                        <a href="#" class="benefit-tag">Encrypted Records</a>
                        <a href="#" class="benefit-tag">Secure Database</a>
                        <a href="#" class="benefit-tag">Controlled Access</a>
                    </div>
                </div>

                <!-- Data Security -->
                <div class="practice-card-new">
                    <div class="practice-header">
                        <div aclass="practice-icon-new">🔒</div>
                        <div class="practice-info">
                            <h3>Data Security & Protection</h3>
                            <span class="practice-duration">Continuous monitoring</span>
                        </div>
                    </div>

                    <p class="practice-description">
                        Our system incorporates modern security measures including encryption, role-based access,
                        secure authentication, and regular audits to ensure student privacy and protection against breaches.
                    </p>

                    <div class="practice-benefits">
                        <a href="#" class="benefit-tag">Role-Based Access</a>
                        <a href="#" class="benefit-tag">Encryption</a>
                        <a href="#" class="benefit-tag">Secure Login</a>
                        <a href="#" class="benefit-tag">Activity Logs</a>
                    </div>
                </div>

                <!-- User Rights -->
                <div class="practice-card-new">
                    <div class="practice-header">
                        <div class="practice-icon-new">📜</div>
                        <div class="practice-info">
                            <h3>Student & User Rights</h3>
                            <span class="practice-duration">Full control</span>
                        </div>
                    </div>

                    <p class="practice-description">
                        Students and administrators have the right to access, update, correct, or request deletion
                        of their data. We ensure compliance with modern data protection regulations, providing transparency
                        and full control over personal information.
                    </p>

                    <div class="practice-benefits">
                        <a href="#" class="benefit-tag">Data Editing</a>
                        <a href="#" class="benefit-tag">Right to Delete</a>
                        <a href="#" class="benefit-tag">Transparency</a>
                        <a href="#" class="benefit-tag">Ownership</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
