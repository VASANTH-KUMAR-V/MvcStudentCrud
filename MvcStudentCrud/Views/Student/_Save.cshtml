@model StudentDb.Models.Student

<div class="modal-header" style="background: var(--primary); color: white;">
    <h5 class="modal-title">@((Model.Id == 0) ? "Add Student" : "Edit Student")</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">

    <!-- Themed Contact-Style Form -->
    <div class="contact-form" style="padding: 0;">
        <form id="saveForm">

            <input type="hidden" asp-for="Id" />

            <!-- Name -->
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Mobile -->
            <div class="form-group">
                <label asp-for="MobileNumber"></label>
                <input asp-for="MobileNumber" />
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>

            <!-- State -->
            <div class="form-group">
                <label asp-for="State"></label>
                <select asp-for="State" asp-items="@(new SelectList(ViewBag.States))">
                    <option value="">-- Select State --</option>
                </select>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>

            <!-- Gender -->
            <div class="form-group">
                <label>Gender</label>
                <div style="display: flex; gap: 1.2rem; margin-top: .4rem;">
                    <label><input type="radio" asp-for="Gender" value="Male" /> Male</label>
                    <label><input type="radio" asp-for="Gender" value="Female" /> Female</label>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <!-- DOB -->
            <div class="form-group">
                <label asp-for="Dob"></label>
                <input asp-for="Dob" type="date" />
                <span asp-validation-for="Dob" class="text-danger"></span>
            </div>

            <!-- Status -->
            <div class="form-group">
                <label>Status</label>
                <div style="display: flex; gap: 1.2rem; margin-top: .4rem;">
                    <label><input type="radio" name="Status" value="true" @(Model.Status ? "checked" : "") /> Active</label>
                    <label><input type="radio" name="Status" value="false" @(!Model.Status ? "checked" : "") /> Inactive</label>
                </div>
            </div>

        </form>
    </div>
</div>

<div class="modal-footer">
    <button type="button" id="btnSave" class="submit-btn">
        @((Model.Id == 0) ? "Save Student" : "Update Student")
    </button>
    <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>
