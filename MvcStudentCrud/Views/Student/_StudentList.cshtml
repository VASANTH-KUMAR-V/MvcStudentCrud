@model IEnumerable<StudentDb.Models.Student>
<!-- Feature Showcase Wrapper -->
<div class="feature-showcase">
    <div class="showcase-content">
        <h3>Student Records Dashboard</h3>

        <div class="table-responsive">
            <table class="table table-bordered" id="studentTable">
                <thead>
                    <tr class="bg-dark text-white">
                        <th>ID</th>
                        <th>Name</th>
                        <th>Mobile</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var s in Model)
                    {
                        <tr>
                            <td>@s.Id</td>
                            <td>@s.Name</td>
                            <td>@s.MobileNumber</td>
                            <td>
                                <span class="@(s.Status ? "text-success" : "text-danger")">
                                    @(s.Status ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>
                                <button class="btn btn-warning btn-sm" onclick="openPopup('/Student/SavePopup?id=@s.Id')">Edit</button>
                                <button class="btn btn-info btn-sm" onclick="openPopup('/Student/DetailsPopup/@s.Id')">Details</button>
                                <button class="btn btn-danger btn-sm" onclick="openPopup('/Student/DeletePopup/@s.Id')">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#studentTable').DataTable({
                "paging": true,
                "searching": true,
                "info": false,
                "responsive": true
            });
        });
    </script>
}
