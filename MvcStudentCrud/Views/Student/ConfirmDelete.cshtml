@model StudentDb.Models.Student

<h2>Confirm Delete</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this student?
</div>

<table class="table table-bordered">
    <tr><th>Name</th><td>@Model.Name</td></tr>
    <tr><th>Email</th><td>@Model.Email</td></tr>
    <tr><th>Mobile</th><td>@Model.MobileNumber</td></tr>
    <tr><th>State</th><td>@Model.State</td></tr>
    <tr><th>Gender</th><td>@Model.Gender</td></tr>
    <tr><th>DOB</th><td>@Model.Dob.ToShortDateString()</td></tr>
</table>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Student/Index" class="btn btn-secondary">Cancel</a>
</form>
