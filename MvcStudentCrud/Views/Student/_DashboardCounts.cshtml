<!-- Stats Banner for Student Dashboard -->
<div class="stats-banner student-stats-banner">

    <div class="stat-block">
        <div class="stat-value">@ViewBag.TotalStudents</div>
        <div class="stat-desc">Total Students</div>
    </div>

    <div class="stat-block">
        <div class="stat-value">@ViewBag.ActiveStudents</div>
        <div class="stat-desc">Active Students</div>
    </div>

    <div class="stat-block">
        <div class="stat-value">@ViewBag.InactiveStudents</div>
        <div class="stat-desc">Inactive Students</div>
    </div>

</div>
